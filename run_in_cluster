## Run Network Build
cat > network_build.sh <<'EOT'
#!/bin/bash

export NXF_OPTS="-Xms500M -Xmx2G"
nextflow run main_pipeline.nf -resume
EOT

#  -qs "$SLURM_NTASKS"

chmod +x network_build.sh


sbatch \
  --job-name=itsx -p amd \
  --ntasks-per-node=1 --nodes=1 \
  --mem=2G --time 24:00:00 \
  network_build.sh
