## Run Network Build
cat > network_build.sh <<'EOT'
#!/bin/bash

export NXF_OPTS="-Xms500M -Xmx2G"
export NXF_SINGULARITY_CACHEDIR="/gpfs/space/home/felipe1/Singularity_images/"
module load singularity/3.6.4
module load nextflow/22.04.3
nextflow run main_pipeline.nf -profile singularity
EOT

#  -qs "$SLURM_NTASKS"

chmod +x network_build.sh



sbatch \
  --job-name=network_build -p amd \
  --ntasks-per-node=1 --nodes=1 \
  --mem=2G --time 1:00:00 \
  network_build.sh
